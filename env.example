# Environment Variables Template
# Copy this to .env and fill in your values
# NEVER commit .env files with real credentials!

# =============================================================================
# DEVELOPMENT SETUP (Copy from env.development)
# =============================================================================

# Django Settings
SECRET_KEY=dev-key-only-for-development-never-use-in-production-12345678901234567890
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database (Development)
POSTGRES_DB=newsapi
POSTGRES_USER=newsapi
POSTGRES_PASSWORD=dev_password_123
DATABASE_URL=postgresql://newsapi:dev_password_123@db:5432/newsapi

# Redis
REDIS_URL=redis://redis:6379/0

# Email (Development - Console Backend)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_PORT=587
EMAIL_USE_TLS=True

# CORS
CORS_ORIGIN_WHITELIST=http://localhost:3000,http://localhost:8000,https://9janewsapi.netlify.app

# Site
DOMAIN=9janewsapi.com.ng
SITE_NAME=9ja News API

# =============================================================================
# PRODUCTION SETUP (Uncomment and fill in for production)
# =============================================================================

# Django Settings (Production)
# SECRET_KEY=your-generated-50-character-secret-key-here
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database (Production)
# POSTGRES_DB=newsapi_prod
# POSTGRES_USER=newsapi_user
# POSTGRES_PASSWORD=your-super-strong-database-password-here
# DATABASE_URL=postgresql://newsapi_user:your-super-strong-password@db:5432/newsapi_prod

# Email (Production)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.your-email-provider.com
# EMAIL_HOST_USER=your-email@domain.com
# EMAIL_HOST_PASSWORD=your-app-specific-password
# EMAIL_PORT=587
# EMAIL_USE_TLS=True

# CORS (Production)
# CORS_ORIGIN_WHITELIST=https://yourdomain.com,https://www.yourdomain.com

# Site (Production)
# DOMAIN=yourdomain.com
# SITE_NAME=9ja News API

